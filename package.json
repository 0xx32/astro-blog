{
	"name": "astro-blog",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"biome:format": "biome format --write ./src",
		"biome:lint": "biome lint --write ./src",
		"biome:check": "biome check --write ./src",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/db": "^0.14.6",
		"@astrojs/node": "^9.0.2",
		"@astrojs/tailwind": "^5.1.5",
		"@astrojs/vue": "^5.0.6",
		"astro": "^5.1.8",
		"better-auth": "^1.1.14",
		"tailwindcss": "^3.4.17",
		"vue": "^3.5.13"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.2"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,astro,vue}": [
			"biome check --files-ignore-unknown=true --fix --unsafe"
		]
	}
}
