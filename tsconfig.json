{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["src/components/*"],
      "@/assets/*": ["src/assets/*"],
      "@/modules/*": ["src/modules/*"],
      "@/utils/*": ["src/utils/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/actions/*": ["src/actions/*"],
      "@/_types/*": ["src/_types/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
