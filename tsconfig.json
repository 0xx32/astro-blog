{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@modules/*": ["src/modules/*"],
			"@utils/*": ["src/utils/*"],
			"@layouts/*": ["src/layouts/*"],
			"@actions/*": ["src/actions/*"],
			"@_types/*": ["src/_types/*"]
		}
	}
}
