{
	"name": "astro-blog",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"biome:format": "biome format --write ./src",
		"biome:lint": "biome lint --write ./src",
		"biome:check": "biome check --write ./",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/node": "^9.0.2",
		"@astrojs/tailwind": "^5.1.5",
		"@astrojs/vue": "^5.0.6",
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "6.2.1",
		"@vee-validate/zod": "^4.15.0",
		"astro": "^5.1.9",
		"astro-cloudinary": "^1.3.0",
		"better-auth": "^1.1.14",
		"cloudinary": "^2.5.1",
		"dotenv": "^16.4.7",
		"lucide": "^0.474.0",
		"lucide-vue-next": "^0.474.0",
		"tailwindcss": "^3.4.17",
		"vee-validate": "^4.15.0",
		"vue": "^3.5.13",
		"vue3-toastify": "^0.2.8",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/pg": "^8.11.11",
		"daisyui": "^4.12.23",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.2",
		"prisma": "^6.2.1",
		"tsx": "^4.19.2"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,astro,vue}": [
			"biome check --files-ignore-unknown=true --fix --unsafe"
		]
	}
}
